{
  "_comment": "Optional configuration file for documentation generators",
  "_location": "Copy to .claude/docs.config.json in your project root",

  "project_type_override": null,

  "custom_paths": {
    "_comment": "Override default Laravel paths if your structure differs",
    "models": "app/Models",
    "controllers": "app/Http/Controllers",
    "services": "app/Services",
    "repositories": "app/Repositories",
    "events": "app/Events",
    "routes_api": "routes/api.php",
    "routes_web": "routes/web.php",
    "migrations": "database/migrations"
  },

  "generator_settings": {
    "api": {
      "_comment": "Settings for update_api_docs.py",
      "include_web_routes": true,
      "group_by_resource": true,
      "show_middleware": true
    },

    "components": {
      "_comment": "Settings for update_components.py",
      "scan_controllers": true,
      "scan_services": true,
      "scan_repositories": true,
      "include_models": true
    },

    "erd": {
      "_comment": "Settings for update_erd.py",
      "max_attributes": 8,
      "show_relationships": true,
      "scan_migrations": true
    },

    "events": {
      "_comment": "Settings for update_events.py",
      "scan_event_service_provider": true,
      "show_queued_listeners": true
    }
  },

  "output": {
    "_comment": "Output directory configuration",
    "directory": "docs",
    "file_extension_mermaid": "mmd",
    "file_extension_markdown": "md"
  }
}
